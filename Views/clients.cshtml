@{
    Layout="Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No clients have been added yet!</p>
}
else
{
  <h1>Here is your list of clients:</h1>
  <ul>
    @foreach (var client in Model)
    {
       <a href="/client/@client.GetId()"><li>@client.GetName()</li></a>
    }
  </ul>
  <form action="/clients/delete" method="post">
    <button type="submit" class="btn">Clear all clients</button>
  </form>
}
<p><a href="/clients/new">Add a new client</a></p>
<p><a href="/">Return home</a></p>
