@{
    Layout="Shared/_Layout.cshtml";
}

<h2>Here are all the clients for this stylist:</h2>

@if (@Model["clients"].Count == 0)
{
  <p>No clients have been added yet!</p>
}
else
{
  <ol>
    @foreach (var client in @Model["clients"])
    {
      <a href='/client/@client.GetId()'><li>@client.GetName()</li></a>
    }
  </ol>
}

<form action='/stylist/delete/@Model["stylist"].GetId()' method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete this stylist</button>
</form>

<p><a href='/stylist/edit/@Model["stylist"].GetId()'class="links">Update this stylist's information</a></p>
<p><a href="/clients/new">Add a new client</a></p>
<p><a href="/">Return to Main Page</a></p>
